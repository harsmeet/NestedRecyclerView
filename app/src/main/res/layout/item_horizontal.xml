<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"  >

    <!--android:layout_marginEnd="@dimen/dp_8"-->
    <!--android:layout_marginTop="@dimen/dp_4"-->
    <!--android:layout_marginBottom="@dimen/dp_4"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:padding="8dp"
        android:orientation="vertical">

        <!--android:padding="@dimen/dp_6"-->
        <!--android:background="@drawable/round_corner_white"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/img_product_image_single_cart"
                android:layout_gravity="top"
                android:src="@mipmap/ic_launcher"
                android:layout_marginStart="8dp"/>

            <!--android:background="@drawable/round_corner"-->
            <!--android:layout_gravity="top"-->
            <!--android:src="@drawable/top_logo"-->
            <!--android:layout_marginTop="@dimen/dp_8"-->
            <!--android:layout_marginStart="@dimen/dp_8"-->


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:paddingStart="8dp">

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl_name">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_product_name_shopping_cart_single"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:letterSpacing="0.04"
                        android:gravity="center|left"
                        android:text="ACC Cement 43 Grade"
                        android:layout_marginTop="8dp"/>
                </RelativeLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/l0"
                    android:visibility="gone"
                    android:layout_below="@+id/rl_name"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_dynamic_attribute_key"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#777578"
                        android:text="Diameter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_attribute_value"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginLeft="16dp"
                        android:text="32 mm" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/l1"
                    android:layout_below="@+id/l0"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#777578"
                        android:text="Quantity :" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_product_quantity_shopping_cart_single"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginLeft="8dp"
                        android:text="79.6"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/l3"
                    android:layout_below="@+id/l1"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#777578"
                        android:text="Price :" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/tv_product_price_single_cart"
                        android:layout_marginLeft="8dp"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:letterSpacing="0.01"
                        android:gravity="center_horizontal"
                        android:text="â‚¹ 320000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:id="@+id/tv_unit_type"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:layout_marginStart="4dp"
                        android:textColor="#000000"
                        android:gravity="center_horizontal"
                        android:text=""
                        />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/main"
        android:background="#777578"/>

</RelativeLayout>



